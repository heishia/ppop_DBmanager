generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contacts ContactHistory[]
  groups   CustomerGroupMember[]

  @@map("customers")
}

model ContactHistory {
  id          String      @id @default(cuid())
  customerId  String
  contactedAt DateTime    @default(now())
  type        ContactType
  note        String?

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@map("contact_histories")
}

enum ContactType {
  email
  phone
  other
}

model CustomerGroup {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members CustomerGroupMember[]

  @@map("customer_groups")
}

model CustomerGroupMember {
  id         String   @id @default(cuid())
  groupId    String
  customerId String
  addedAt    DateTime @default(now())

  group    CustomerGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  customer Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([groupId, customerId])
  @@map("customer_group_members")
}
